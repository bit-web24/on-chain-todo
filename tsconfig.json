    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": [
      "bloc/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  